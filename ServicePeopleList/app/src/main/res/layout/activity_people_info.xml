<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="a501.itis.kpfu.ru.servicepeoplelist.activities.PeopleInfoActivity">
        <ImageView
            android:id="@+id/people_image_huge"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/people_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Def Surname"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/people_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Def Name"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/people_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Def Email"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/people_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Def Username"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/people_city"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Def City"
            android:textSize="20dp"/>
    </LinearLayout>
